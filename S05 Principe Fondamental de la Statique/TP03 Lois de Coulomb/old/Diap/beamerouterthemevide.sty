%Title page

\defbeamertemplate*{title page}{renaud}[1][]
{
  \vbox{}
  \vfill
  \begin{centering}
     \begin{minipage}[c]{.14\linewidth}

\end{minipage} \hfill
\begin{minipage}[c]{.85\linewidth}
    \begin{beamercolorbox}[sep=8pt,center,#1]{title}

\usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.25em%
        {\usebeamerfont{subtitle}\usebeamercolor[white]{subtitle}\insertsubtitle\par}%
      \fi%     
    \end{beamercolorbox}%
    \vskip1em\par
    \begin{beamercolorbox}[sep=2pt,center,#1]{author}
      \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}
    \vskip1em\par
    \begin{beamercolorbox}[sep=2pt,center,#1]{date}
      \usebeamerfont{date}\insertdate
    \end{beamercolorbox}
    \vskip1em\par
    \begin{beamercolorbox}[sep=2pt,center,#1]{institute}
      \usebeamerfont{institute}\insertinstitute
    \end{beamercolorbox}
    {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
\end{minipage}
  \end{centering}
  \vfill

}
